<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>


    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    <item name="colorPrimary">@color/colorSecondaryLight</item>
    <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorSecondaryText</item></style>


    <style name="subTitles">
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>





</resources>

